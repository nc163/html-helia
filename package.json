{
  "name": "html-helia",
  "description": "Display data from the IPFS network.",
  "version": "0.1.0",
  "homepage": "https://github.com/nc163/html-helia",
  "bugs": {
    "url": "https://github.com/nc163/html-helia/issues"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "http://github.com/nc163/html-helia.git"
  },
  "type": "module",
  "files": [
    "src"
  ],
  "scripts": {
    "dev": "node example/server.cjs",
    "build:dev": "webpack --config webpack.dev.config.cjs",
    "build": "webpack --config webpack.config.cjs",
    "lint:fix": "eslint --cache --fix src/ && prettier --write src/",
    "lint:fix:all": "npm --prefix packages/html-helia run lint:fix",
    "clean": "rimraf docs/js/*, example/public/js/*"
  },
  "keywords": [
    "browser",
    "dapps",
    "helia",
    "html",
    "ipfs"
  ],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=7.0.0"
  },
  "dependencies": {
    "@html-helia/html-helia": "file:packages/html-helia",
    "helia": "^4.0.2"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "express": "^4.18.3",
    "karma": "^6.4.3",
    "prettier": "3.2.5",
    "rimraf": "^5.0.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4"
  },
  "workspaces": [
    "./packages/html-helia"
  ]
}
