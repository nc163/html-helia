{
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@types/html-ipfs": ["packages/types"],
      "@html-ipfs/core": ["packages/core"],
      "@html-ipfs/html": ["packages/html"],
    }
  },
  "exclude": [
    "**/node_modules/**",
    "**/dist/**"
  ],
  "include": [
    "packages/**/*"
  ]
}
